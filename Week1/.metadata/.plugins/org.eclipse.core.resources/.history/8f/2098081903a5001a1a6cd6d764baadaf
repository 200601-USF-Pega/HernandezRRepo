import com.revature.tourofheros.exceptions.InvalidHealthValueException;
import com.revature.tourofheros.models.Hero;

public class Driver {

	public static void main(String[] args){
		// TODO Auto-generated method stub
		String[] specialMoves = {"heat vision", "light", "invulnerability"};
		String[] specialMoves2 = {"flying"};
		
		Hero newHero = new Hero("Superman", specialMoves);
		//order matters in catch blocks
		try {
			newHero.setHealthLevel(-1);
		} catch (InvalidHealthValueException e){
			e.printStackTrace();
		} finally {
			//finally runs always
			//usually where clean up goes (file, connection close etc.) 
			System.out.println("Tried to make a hero could've failed");
		}
		
		//try with resources - to read on
		Hero newHero2 = new Hero("Falcon", specialMoves2);
		
		System.out.println(newHero);
		System.out.println(newHero2);
	}

}
